#!/usr/bin/env sh

INFO=""

command -v $1 2>&1 > /dev/null
if [ $? = 0 ]; then
    INFO="VPN: $(mullvad status) ---"
fi

BATTERY=$(upower -i /org/freedesktop/UPower/devices/battery_BAT0)
INFO+=" $(echo "$BATTERY" | grep 'percentage' | xargs | cut -d ' ' -f 2)"
INFO+=" $(echo "$BATTERY" | grep 'state' | xargs | cut -d ' ' -f 2)"
INFO+=" $(date +'%d-%m-%Y %H:%M:%S')"

echo "$INFO" 
